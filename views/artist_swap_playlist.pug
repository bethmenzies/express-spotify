extends layout

block content

  h1 #{title}: #{artist.name}

  p Do you want to swap this Artist?
  p This will also swap their songs between watchlist playlists. 

  form(method='POST')
    div.form-group
      input#artistid.form-control(type='hidden', name='artistid', value=artist._id )

    button.btn.btn-primary(type='submit') Swap