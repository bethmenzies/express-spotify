extends layout

block content

  h1 #{title}

  form(method='POST')
    div.form-group
      label(for='name') Artist:
      input#name.form-control(type='text', name='name' required value=(undefined===artist ? '' : artist.name) )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg