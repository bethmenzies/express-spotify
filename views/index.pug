extends layout

block content
  - var auth = process.env.ACCESS_TOKEN === "" ? false : true
  h1= title
  p Welcome to #{title}

  if !auth
    h2= Login 
    p You need to log in first 
    a(href='http://127.0.0.1:3000/login') Login
  else
    h2= "What would you like to do?"
    a(href="http://127.0.0.1:3000/run?watchlist=false") Run (get latest releases from artists)
    br
    a(href="http://127.0.0.1:3000/artists?watchlist=false") View / Edit Artists
    br
    a(href="http://127.0.0.1:3000/tracks?watchlist=false") View / Edit Tracks
    br
    a(href="http://127.0.0.1:3000/refresh?watchlist=false") Refresh Cache
    br
    br
    br
    a(href="http://127.0.0.1:3000/run?watchlist=true") Run (get latest releases from watchlist artists)
    br
    a(href="http://127.0.0.1:3000/artists?watchlist=true") View / Edit Watchlist Artists
    br
    a(href="http://127.0.0.1:3000/tracks?watchlist=true") View / Edit Watchlist Tracks
    br
    a(href="http://127.0.0.1:3000/refresh?watchlist=true") Refresh Watchlist Cache
    br
    br
    br
    a(href="http://127.0.0.1:3000/createFromDB") Run (create playlist from tracks in DB)
