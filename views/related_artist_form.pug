extends layout

block content

  h1 #{title}

  form(method='POST')
    div.form-group
      label(for='names') Update Related Artists?
      input#related.form-control(type='text', name='names' value=(undefined===artist ? '' : artist.name))
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg